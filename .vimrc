" theme, font
colorscheme industry
set guifont=MigMix_1M:h8
set encoding=utf-8

" beep sound
set visualbell t_vb=

" Line number
set number

" cursor line
set cursorline
set cursorcolumn

set virtualedit=onemore
set smartindent
set laststatus=2
set wildmode=list:longest

" swap, backup files
set noswapfile
set nobackup
set noundofile

" visualize space, tab, etc
set list
set listchars=trail:.
set listchars=tab:>-
set listchars=eol:$

set visualbell
set showmatch
set matchtime=1
set matchpairs& matchpairs+=<:>
